generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id // Clerk userId
  email     String   @unique
  name      String?
  image     String?
  bio       String?
  website   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  pins      Pin[]
  boards    Board[]
  likes     Like[]
  comments  Comment[]
  
  @@index([email])
}

model Pin {
  id           String   @id @default(cuid())
  title        String
  description  String?
  imageUrl     String
  cloudinaryId String?
  link         String?
  tags         String[] @default([])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  boardId      String?
  board        Board?   @relation(fields: [boardId], references: [id], onDelete: SetNull)
  
  likes        Like[]
  comments     Comment[]
  
  @@index([userId])
  @@index([boardId])
  @@index([createdAt])
}

model Board {
  id          String   @id @default(cuid())
  name        String
  description String?
  isPrivate   Boolean  @default(false)
  coverImage  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  pins        Pin[]
  
  @@index([userId])
  @@index([createdAt])
}

model Like {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  pinId     String
  pin       Pin      @relation(fields: [pinId], references: [id], onDelete: Cascade)
  
  @@unique([userId, pinId])
  @@index([pinId])
  @@index([userId])
}

model Comment {
  id        String   @id @default(cuid())
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  pinId     String
  pin       Pin      @relation(fields: [pinId], references: [id], onDelete: Cascade)
  
  @@index([pinId])
  @@index([userId])
  @@index([createdAt])
}